<h1>Neuer Event</h1>

<%= form_for(@event) do |f| %>
	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</p>
	<p>
		<%= f.label :location %>
		<%= f.text_field :location %>
	</p>
	<p>
		<%= f.label :price %>
		<%= f.number_field :price %>
	</p>
	<p>
		<%= f.label :start_date %>
		<%= f.datetime_select :start_date %>
	</p>
	<p><%= f.submit %></p>

<% end %>